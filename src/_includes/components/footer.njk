<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{{ site.name }}</h3>
        <p>Version {{ nuget.version }}</p>
        {% if nuget.cached %}
        <p class="cache-notice">⚠️ Data cached: {{ nuget.cacheTimestamp }}</p>
        {% endif %}
      </div>
      
      <div class="footer-section">
        <h3>Links</h3>
        <ul class="footer-links">
          {% for item in navigation.footer %}
          <li>
            <a href="{% if item.external %}{{ item.url }}{% else %}{{ item.url | relativePath }}{% endif %}"{% if item.external %} target="_blank" rel="noopener noreferrer"{% endif %}>
              {{ item.label }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer-section">
        <p>&copy; 2025 <a href="https://markhazleton.com" target="_blank" rel="noopener noreferrer">{{ site.author.name }}</a></p>
        <p>Licensed under MIT</p>
      </div>
    </div>
  </div>
</footer>
