{
  "name": "webspark-httpclientutility-docs",
  "version": "1.4.0",
  "description": "Documentation website for WebSpark.HttpClientUtility",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf ../docs",
    "dev": "eleventy --serve",
    "build": "npm run clean && npm run copy:prism && cross-env ELEVENTY_ENV=production eleventy",
    "build:prod": "npm run clean && npm run copy:prism && cross-env ELEVENTY_ENV=production eleventy",
    "copy:prism": "node scripts/copy-prism.js",
    "test:html": "htmlhint ../docs/**/*.html",
    "validate": "npm run test:html"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "cross-env": "^10.1.0",
    "htmlhint": "^1.7.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "rimraf": "^6.1.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "prismjs": "^1.30.0"
  }
}
