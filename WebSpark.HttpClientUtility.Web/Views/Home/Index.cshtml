            <div class="mb-5">
                <h3 class="border-bottom pb-2 mb-3">@category.Key</h3>
          <div class="row g-4">
             @foreach (var feature in category)
    {
              <div class="col-lg-6">
     <div class="card h-100 shadow-sm hover-shadow">
     <div class="card-body">
  <div class="d-flex justify-content-between align-items-start mb-3">
             <h4 class="card-title">
    <span style="font-size: 2rem;">@feature.Icon</span>
           @feature.Title
